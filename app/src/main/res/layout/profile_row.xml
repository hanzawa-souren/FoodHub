<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bulletin_card_container"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="@dimen/category_ic_radius"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bulletin_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >


        <ImageView
            android:id="@+id/profile_row_img"
            android:layout_width="76dp"
            android:layout_height="76dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="25dp"
            app:srcCompat="@drawable/date_range_fill" />

        <TextView
            android:id="@+id/profile_row_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="content"
            android:textColor="#A4A4A4"
            app:layout_constraintStart_toEndOf="@+id/profile_row_img"
            app:layout_constraintTop_toBottomOf="@+id/profile_row_title" />

        <TextView
            android:id="@+id/profile_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="16dp"
            android:text="Title"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/profile_row_img"
            app:layout_constraintTop_toTopOf="@+id/profile_row_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>