<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.login.LoginFragment">

    <TextView
        android:id="@+id/loginIDTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/poppins"
        android:text="@string/loginIDTVS"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginPWTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/passwordTVS"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/loginIDTV"
        app:layout_constraintTop_toBottomOf="@+id/loginIDTV" />

    <EditText
        android:id="@+id/loginIDTE"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/loginIDTV"
        app:layout_constraintTop_toBottomOf="@+id/loginIDTV" />

    <EditText
        android:id="@+id/loginPWTE"
        android:layout_width="327dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/loginPWTV"
        app:layout_constraintTop_toBottomOf="@+id/loginPWTV" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="334dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins"
        android:text="Login"
        app:backgroundTint="@color/salmon"
        app:layout_constraintStart_toStartOf="@+id/loginPWTE"
        app:layout_constraintTop_toBottomOf="@+id/loginPWTE" />

    <Button
        android:id="@+id/loginScrBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:text="Back"
        android:textColor="#000000"
        android:textSize="16sp"
        app:icon="@drawable/arrow_back_ios_fill0_wght400_grad0_opsz48"
        app:iconPadding="0dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>