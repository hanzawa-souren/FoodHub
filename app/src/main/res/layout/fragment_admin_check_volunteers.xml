<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/checkVolunteerRV"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allPending" />

            <Button
                android:id="@+id/allPresent"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Check All Present"

                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                style="@style/ButtonStyle"
                android:backgroundTint="#FC7753"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/allPending"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Reset all"
                style="@style/ButtonStyle"
                android:backgroundTint="#FC7753"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allPresent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
