<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BlackTextStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GrayTextStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="WhiteTextStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavLabelStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TopToolbarLabelStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="android:editTextColor">@color/black</item>
    </style>

    <style name="TabLabelStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/salmonAndVanilla</item>
    </style>

    <style name="AddUpdateFieldStyle">
        <item name="android:background">@color/transparent</item>
        <item name="android:theme">@style/InputFieldStyle</item>
    </style>

    <style name="InputFieldStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PreviewTitleStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">@dimen/margin</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
    </style>
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        &lt;!&ndash; Other style items &ndash;&gt;
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>-->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Other style items -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="CategoryCardStyle">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    
</resources>